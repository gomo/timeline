@import 'nib'

.tlFrameView .tlLineView
	clearfix();
	float: left;
	user-select(none);

/* tlTimeIndicator */
#tlTimeIndicator
	width: 70px;
	height: 24px;
	line-height: 24px;
	color: #ddd
	font-size: 12px;
	text-align: center;
	padding-right: 10px
	font-weight: bold
	background-image: url('../img/indicator.png')
	background-repeat: no-repeat

/* tlRuler */
.tlFrameView .tlLineView .tlRulerView
	float: left
	text-align: center
	font-size: 14px

/* tlTimeline */
.tlFrameView .tlLineView.even .tlTimeline
	background-color: #f3f3f3;

.tlFrameView .tlLineView.odd .tlTimeline
	background-color: #fbfbfb;



.tlFrameView .tlLineView.tlEventOver .tlTimeline
	background-color: #FFFED6;

.tlFrameView .tlLineView .tlTimeline
	float: left
	margin-top: 10px;
	

.tlFrameView .tlLineView .tlTimeline .tlLabel
	font-size: 11px
	text-align: center
	height 16px
	line-height: 16px
	color: #fff
	background-color: #000
	opacity: 0.4

.tlFrameView .tlLineView .tlTimeline .tlHourView
	border-top 1px solid #999

.tlFrameView .tlLineView .tlTimeline .tlHourView.tlHasLabel
	border-top none

.tlFrameView .tlLineView .tlTimeline .tlMinView._15, .tlTimeline .tlMinView._45
	border-bottom 1px dashed #ddd

.tlFrameView .tlLineView .tlTimeline .tlMinView._30
	border-bottom 1px solid #ccc

/* tlEventView */
.tlFrameView .tlEventView
	opacity: 0.7
	border-radius: 8px
	border: 1px solid #555;
	margin: 0 auto
	text-align: center
	line-height: 17px;
	overflow: hidden

.tlFrameView .tlEventView.tlFloating
	border: 2px dotted #333;

.tlFrameView .tlEventView.disable
	background-color #999
	border-radius 0
	width 100%

.tlFrameView .tlEventView .time
	border-radius: 6px
	width: 85%;
	margin 0 auto
	position relative
	background-color #fff
	opacity: 0.7
	border: 1px solid #888
	box-shadow: -1px -1px 4px #555
	font-size 85%

.tlFrameView .tlEventView .time.start
	top 3px

.tlFrameView .tlEventView .time.end
	margin-top: 1px

.tlFrameView .tlEventView .display
	overflow: hidden
	line-height: 14px;
	padding-top: 2px
	font-size 80%

/* color variation */
.tlFrameView .tlEventView.blue
	background-color #A3CDE1

.tlFrameView .tlEventView.pink
	background-color #FFB6B6

.tlFrameView .tlEventView.green
	background-color #B8F1AC

.tlFrameView .tlEventView.yellow
	background-color #FFFFB6

.tlFrameView .tlEventView.orange
	background-color #FFDCB6