@import 'nib'

.tlLineView
	clearfix();
	float: left;


/* tlRuler */
.tlLineView .tlRuler
	float: left
	text-align: center

/* tlTimeline */
.tlLineView.even .tlTimeline
	background-color: #f3f3f3;

.tlLineView.odd .tlTimeline
	background-color: #fbfbfb;

.tlLineView .tlTimeline
	float: left

.tlLineView .tlTimeline .tlHourView
	border-top 1px solid #999

.tlLineView .tlTimeline .tlMinView._15, .tlTimeline .tlMinView._45
	border-bottom 1px dashed #ddd

.tlLineView .tlTimeline .tlMinView._30
	border-bottom 1px solid #ccc

/* tlEventView */
.tlLineView .tlTimeline .tlEventView
	opacity: 0.7
	border-radius: 8px
	border: 1px solid #555;
	width 85%
	margin: 0 auto

.tlLineView .tlTimeline .tlEventView.disable
	background-color #999
	border-radius 0
	width 100%

/* color variation */
.tlLineView .tlTimeline .tlEventView.blue
	background-color #A3CDE1

.tlLineView .tlTimeline .tlEventView.pink
	background-color #FFB6B6

.tlLineView .tlTimeline .tlEventView.green
	background-color #B8F1AC

.tlLineView .tlTimeline .tlEventView.yellow
	background-color #FFFFB6

.tlLineView .tlTimeline .tlEventView.orange
	background-color #FFDCB6