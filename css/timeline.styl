@import 'nib'

.tmTimelineWrap
	clearfix();
	float: left;


/* tmRuler */
.tmTimelineWrap .tmRuler
	float: left
	text-align: center

/* tmTimeline */
.tmTimelineWrap.even .tmTimeline
	background-color: #f3f3f3;

.tmTimelineWrap.odd .tmTimeline
	background-color: #fbfbfb;

.tmTimelineWrap .tmTimeline
	float: left

.tmTimelineWrap .tmTimeline .tmHour
	border-top 1px solid #999

.tmTimelineWrap .tmTimeline .tmMin._15, .tmTimeline .tmMin._45
	border-bottom 1px dashed #ddd

.tmTimelineWrap .tmTimeline .tmMin._30
	border-bottom 1px solid #ccc

/* tmEvent */
.tmTimelineWrap .tmTimeline .tmEvent
	opacity: 0.7
	border-radius: 8px
	border: 1px solid #555;
	width 85%
	margin: 0 auto

.tmTimelineWrap .tmTimeline .tmEvent.disable
	background-color #999
	border-radius 0
	width 100%

/* color variation */
.tmTimelineWrap .tmTimeline .tmEvent.blue
	background-color #A3CDE1

.tmTimelineWrap .tmTimeline .tmEvent.pink
	background-color #FFB6B6

.tmTimelineWrap .tmTimeline .tmEvent.green
	background-color #B8F1AC

.tmTimelineWrap .tmTimeline .tmEvent.yellow
	background-color #FFFFB6

.tmTimelineWrap .tmTimeline .tmEvent.orange
	background-color #FFDCB6