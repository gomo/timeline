@import 'nib'

.tlLineView
	clearfix();
	float: left;
	user-select(none);

/* tlTimeIndicator */
#tlTimeIndicator
	width: 70px;
	height: 24px;
	line-height: 24px;
	color: #ddd
	font-size: 12px;
	text-align: center;
	padding-right: 10px
	font-weight: bold
	background-image: url('../img/indicator.png')
	background-repeat: no-repeat

/* tlRuler */
.tlRulerView
	float: left
	text-align: center
	font-size: 14px
	margin-top: -10px;

/* tlTimeline */
.tlLineView.even .tlTimeline
	background-color: #f3f3f3;

.tlLineView.odd .tlTimeline
	background-color: #fbfbfb;



.tlLineView.tlEventOver .tlTimeline
	background-color: #FFFED6;

.tlTimeline
	float: left
	

.tlLabel
	font-size: 11px
	text-align: center
	height 16px
	line-height: 16px
	color: #fff
	background-color: #555
	opacity: 0.6
	position: relative;
	z-index: 100;
	padding: 1px;
	overflow: hidden;

.tlLineView.tlHasRuler .tlLabel
	border-radius: 3px 0 0 3px

.tlLineView.tlPrevRuler .tlLabel,
.tlLineView.tlLast .tlLabel
	border-radius: 0 3px 3px 0

.tlHourView
	border-top 1px solid #999

.tlHourView.tlHasLabel
	border-top none

.tlMinView._15, .tlMinView._45
	border-bottom 1px dashed #ddd

.tlMinView._30
	border-bottom 1px solid #ccc

.tlEventTopHandle
	background url("../img/top-handle.png") no-repeat center
	cursor: row-resize
	margin 0 auto

.tlEventDownHandle
	background url("../img/down-handle.png") no-repeat center
	cursor: row-resize
	margin 0 auto

/* tlEventView */
.tlEventView
	opacity: 0.7
	border-radius: 8px
	border: 1px solid #555;
	margin: 0 auto
	text-align: center
	line-height: 17px;
	overflow: hidden

.tlEventView.tlFloating
	border: 2px dotted #333;

.tlEventView.disable
	background-color #999
	border-radius 0
	width 100%

.tlEventView .time
	border-radius: 6px
	width: 85%;
	margin 0 auto
	position relative
	background-color #fff
	opacity: 0.7
	border: 1px solid #888
	box-shadow: -1px -1px 4px #555
	font-size 85%

.tlEventView .time.start
	top 3px

.tlEventView .time.end
	margin-top: 1px

.tlEventView .display
	overflow: hidden
	line-height: 14px;
	padding-top: 2px
	font-size 80%

/* color variation */
.tlEventView.blue
	background-color #A3CDE1

.tlEventView.pink
	background-color #FFB6B6

.tlEventView.green
	background-color #B8F1AC

.tlEventView.yellow
	background-color #FFFFB6

.tlEventView.orange
	background-color #FFDCB6