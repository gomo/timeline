@import 'nib'

.tlLineView
	clearfix();
	float: left;
	user-select(none);

/* tlTimeIndicator */
#tlTimeIndicator
	width: 80px;
	height: 24px;
	line-height: 22px;
	color: #ddd
	font-size: 80%;
	text-align: left;
	padding-left: 20px
	font-weight: bold
	background-image: url('../img/indicator.png')
	background-repeat: no-repeat


/* tlRuler */
.tlLineView .tlRulerView
	float: left
	text-align: center
	font-size: 14px

/* tlTimeline */
.tlLineView.even .tlTimeline
	background-color: #f3f3f3;

.tlLineView.odd .tlTimeline
	background-color: #fbfbfb;

.tlLineView .tlTimeline
	float: left
	margin-top: 10px;

.tlLineView .tlTimeline .tlHourView
	border-top 1px solid #999

.tlLineView .tlTimeline .tlMinView._15, .tlTimeline .tlMinView._45
	border-bottom 1px dashed #ddd

.tlLineView .tlTimeline .tlMinView._30
	border-bottom 1px solid #ccc

/* tlEventView */
.tlLineView .tlTimeline .tlEventView
	opacity: 0.7
	border-radius: 8px
	border: 1px solid #555;
	width 85%
	margin: 0 auto
	text-align: center
	line-height: 17px;
	overflow: hidden

.tlLineView .tlTimeline .tlEventView.disable
	background-color #999
	border-radius 0
	width 100%

.tlLineView .tlTimeline .tlEventView .time
	border-radius: 6px
	width: 85%;
	margin 0 auto
	position relative
	background-color #fff
	opacity: 0.7
	border: 1px solid #888
	box-shadow: -1px -1px 4px #555
	font-size 85%

.tlLineView .tlTimeline .tlEventView .time.start
	top 3px

.tlLineView .tlTimeline .tlEventView .time.end
	margin-top: 1px

.tlLineView .tlTimeline .tlEventView .display
	overflow: hidden
	line-height: 14px;
	padding-top: 2px
	font-size 80%

/* color variation */
.tlLineView .tlTimeline .tlEventView.blue
	background-color #A3CDE1

.tlLineView .tlTimeline .tlEventView.pink
	background-color #FFB6B6

.tlLineView .tlTimeline .tlEventView.green
	background-color #B8F1AC

.tlLineView .tlTimeline .tlEventView.yellow
	background-color #FFFFB6

.tlLineView .tlTimeline .tlEventView.orange
	background-color #FFDCB6